    <link rel="stylesheet" href="~/Content/css/myStyle.css">

    <script src="~/Scripts/jquery-1.11.1.min.js"></script>
</head>

<body class="page-body login-page">

    <div class="login-container">
        <div class="col-sm-6" style="width:50%;float:right;position:relative;top:115px;left:-30px;">
            <div class="form-group" id="gradeInfo">
                <div class="prompt" id="gradeInfo"></div>
            </div>
        </div>
        <div class="row">        
                <div class="col-sm-6" style="float:left">



                    <!-- Errors container -->
                    <div class="errors-container">
                    </div>
                    <form method="post" role="form" id="register" class="login-form fade-in-effect">

                        <div class="login-header">

                            <span>注册页面</span>
                        </div>
                        <div class="form-group">

                            <label class="control-label" for="account">姓名</label>
                            <input type="text" class="form-control input-dark" name="account" id="account" autocomplete="off"/>

                        </div>

                        <div class="form-group">
                            <label class="control-label" for="password">密码</label>
                            <input type="password" class="form-control input-dark" name="password" id="password" autocomplete="off" />
                        </div>

                        <div class="form-group">
                            <label class="control-label" for="passwd1">确认密码</label>
                            <input type="password" class="form-control input-dark" name="passwd1" id="passwd1" autocomplete="off" />
                        </div>

                        @*<div class="form-group">
                            <label class="control-label" for="idCard">身份证</label>
                            <input type="text" class="form-control input-dark" name="idCard" id="idCard" autocomplete="off" />
                        </div>*@

                        <div class="form-group">
                            <label class="control-label" for="phone">电话号码</label>
                            <input type="text" class="form-control input-dark" name="phone" id="phone" autocomplete="off" />
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-dark  text-left">
                                <i class="fa-lock"></i>
                                注册账号
                            </button>
                            
                                <div class="btn btn-dark text-left"><a href="/Home/index" style="color:#ffffff;">已存在账号？</a></div>
                        </div>
                       
                            <div class="login-footer">

                            </div>



</form>
                </div>
           


            </div>

        


        </div>


        <!-- Bottom Scripts -->




        <script src="~/Scripts/jquery-validate/jquery.validate.min.js"></script>


        <!-- JavaScripts initializations and stuff -->
        <script src="~/Scripts/xenon-custom.js"></script>
        <script src="~/Scripts/card.js"></script>
        <script src="~/Scripts/validata.js"></script>
        <script src="~/Scripts/defeng/login.js"></script>
        <!-- <script src="~/Scripts/wysithtml5/lib/js/bootstrap.min.js"></script>-->
        <script src="~/Scripts/bootstrap.min.js"></script>
        <script src="~/Scripts/TweenMax.min.js"></script>
        <script src="~/Scripts/resizeable.js"></script>
        <script src="~/Scripts/joinable.js"></script>
        <script src="~/Scripts/xenon-api.js"></script>
        <script src="~/Scripts/xenon-toggles.js"></script>
        <script src="~/Scripts/toastr/toastr.min.js"></script>
        <script src="~/Scripts/defeng/register.js"></script>
        <!-- <script src="~/Scripts/wysithtml5/lib/js/bootstrap.min.js"></script>-->

    </body>
</html>

