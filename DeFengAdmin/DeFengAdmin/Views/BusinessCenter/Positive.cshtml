
@{
    ViewBag.Title = "Positive";
}
<link rel="stylesheet" href="~/Scripts/datetimepicker/bootstrap-datetimepicker.min.css"> 
<div class="panel">
<div class="row text-right"><a>送办</a>丨<a>查看流程</a>丨<a>暂存</a>丨<a>打印</a>丨<a>返回</a></div>
<div class="row text-center"><h3>转正申请</h3></div>
    <div class="row">&nbsp;</div>
    <div class="row">
        <div class="col-md-1 text-center translation">姓名</div>
        <div class="col-md-2"><input type="text" class="form-control input-dark" name="number" id="number" autocomplete="off" /></div>
        <div class="col-md-0 text-center translation">岗位</div>
        <div class="col-md-2"><input type="text" class="form-control input-dark" name="number" id="number" autocomplete="off" /></div>
        <div class="col-md-0 text-center translation">所在部门</div>
        <div class="col-md-2"><input type="text" class="form-control input-dark" name="number" id="number" autocomplete="off" /></div>
        <div class="col-md-1 text-center translation">进入公司日期</div>
        <div class="col-md-3">
            <div class="date form_datetime">
                <input id="submitHouseDate" class="form-control" name="submitHouseDate" data-validate="required" readonly />
                <span class="add-on"><i class="icon-remove"></i></span>
                <span class="add-on"><i class="icon-calendar"></i></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-1 text-center translation">试用期薪金</div>
        <div class="col-md-3"><input type="text" class="form-control input-dark" name="number" id="number" autocomplete="off" /></div>
        <div class="col-md-1 text-center translation">转正后薪金</div>
        <div class="col-md-3"><input type="text" class="form-control input-dark" name="number" id="number" autocomplete="off" /></div>
        <div class="col-md-1 text-center translation">转正日期</div>
        <div class="col-md-3">
            <div class="date form_datetime">
                <input id="submitHouseDate" class="form-control" name="submitHouseDate" data-validate="required" readonly />
                <span class="add-on"><i class="icon-remove"></i></span>
                <span class="add-on"><i class="icon-calendar"></i></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-1 text-center translation">购买社保</div>
        <div class="col-md-1 translation">
                <label class="radio-inline distance">
                    <input type="radio" checked="" name="socialSecurity" value="是">
                    是
                </label>
            <label class="radio-inline distance">
                <input type="radio" checked="" name="socialSecurity" value="否">
                否
            </label>
        </div>
        <div class="col-md-1 text-center translation">购买何处社保</div>
        <div class="col-md-1 translation text-center">
            <label class="radio-inline">
                <input type="radio" value="惠州" name="huizhou" checked="">
                惠州
            </label>
        </div>
        <div class="col-md-1 text-center translation">服从调配</div>
        <div class="col-md-5 translation">
            <label class="radio-inline">
                <input type="radio" checked="" name="allocate" value="是">
                是
            </label>
            <label class="radio-inline">
                <input type="radio" checked="" name="allocate" value="否">
                否
            </label>
        </div>
    </div>
    <div class="row">
        <div class="col-md-1 text-center translation">转正理由</div>
        <div class="col-md-11">
            <textarea class="form-control" cols="10" rows="5" id="field-5" placeholder=""></textarea>
        </div>
    </div>
    <div class="row">
        <div class="col-md-1 text-center translation">工作总结</div>
        <div class="col-md-2 text-center translation">* 工作总结请以电子文档方式放在附件 </div>
        <div class="col-md-9"><input type="text" class="form-control input-dark" name="attachment" id="attachment" autocomplete="off" /></div>
    </div>
    <div class="row">
        <div class="col-md-1 text-center translation">外勤经理/店长意见 </div>
        <div class="col-md-11">
            <textarea class="form-control" cols="10" rows="5" id="field-5" placeholder=""></textarea>
        </div>
    </div>
    <div class="row">
        <div class="col-md-1 text-center translation">现场经理意见 </div>
        <div class="col-md-11">
            <textarea class="form-control" cols="10" rows="5" id="field-5" placeholder=""></textarea>
        </div>
    </div>
    <div class="row">
        <div class="col-md-1 text-center translation">人事部文员意见 </div>
        <div class="col-md-11">
            <textarea class="form-control" cols="10" rows="5" id="field-5" placeholder=""></textarea>
        </div>
    </div>
    <div class="row">
        <div class="col-md-1 text-center translation">人事经理</div>
        <div class="col-md-11">
            <textarea class="form-control" cols="10" rows="5" id="field-5" placeholder=""></textarea>
        </div>
    </div>
    <div class="row">
        <div class="col-md-1 text-center translation">副总经理</div>
        <div class="col-md-11">
            <textarea class="form-control" cols="10" rows="5" id="field-5" placeholder=""></textarea>
        </div>
    </div>
</div>
<script src="/Scripts/daterangepicker/daterangepicker.js"></script>
<script src="/Scripts/datepicker/bootstrap-datepicker.js"></script>
<script src="/Scripts/timepicker/bootstrap-timepicker.min.js"></script>
<script src="~/Scripts/datetimepicker/bootstrap-datetimepicker.min.js"></script>
<script type="text/javascript" src="/Scripts/datetimepicker/locales/bootstrap-datetimepicker.zh-CN.js"></script>
<script type="text/javascript">
        $(document).ready(function () {
            $('.form_datetime').datetimepicker({
                format: 'yyyy-mm-dd',
                language: 'zh-CN',
                // weekStart: 1,
                todayBtn: 1,
                autoclose: 1,
                todayHighlight: 1,
                startView: 2,
                minView: 2,
                forceParse: 0
            });
        });

</script>