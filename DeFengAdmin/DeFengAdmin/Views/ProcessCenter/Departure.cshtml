
@{
    ViewBag.Title = "Departure";
}
<link rel="stylesheet" href="~/Scripts/datetimepicker/bootstrap-datetimepicker.min.css"> 
<div class="panel">
    <div class="row text-right"><a>送办</a>丨<a>查看流程</a>丨<a>暂存</a>丨<a>打印</a>丨<a href="/ProcessCenter/Resignation">返回</a></div>
    <div class="row text-center"><h3>离职申请</h3></div>
    <div class="row">&nbsp;</div>
    <table class="table table-bordered staffTable table-small-font">
        <tr>
            <td>姓名</td>
            <td colspan="2"><input type="text" class="form-control input-dark" name="number" id="number" autocomplete="off" /></td>
            <td>部门</td>
            <td colspan="2"><input type="text" class="form-control input-dark" name="number" id="number" autocomplete="off" /></td>
        </tr>
        <tr>
            <td>离职原因</td>
            <td colspan="2"><input type="text" class="form-control input-dark" name="number" id="number" autocomplete="off" /></td>
            <td>离职时间</td>
            <td colspan="2">
                <div class="date form_datetime">
                    <input id="submitHouseDate" class="form-control" name="submitHouseDate" data-validate="required" readonly />
                    <span class="add-on"><i class="icon-remove"></i></span>
                    <span class="add-on"><i class="icon-calendar"></i></span>
                </div>
            </td>
        </tr>
        <tr>
            <td>离职说明</td>
            <td colspan="9"><input type="text" class="form-control input-dark" name="title" id="title" /></td>
        </tr>
        <tr>
            <td rowspan="3">分行意见及客<br>户资源交接情况<br>（已出单的签合同，<br>办按揭情况）</td>
            <td colspan="9"><input type="text" class="form-control input-dark" name="title" id="title" /></td>
        </tr>
        <tr>
            <td>移交人</td>
            <td><input type="text" class="form-control input-dark" name="number" id="number" autocomplete="off" /></td>
            <td>接手人</td>
            <td><input type="text" class="form-control input-dark" name="number" id="number" autocomplete="off" /></td>
        </tr>
        <tr>
            <td>移交日期</td>
            <td>
                <div class="date form_datetime">
                    <input id="submitHouseDate" class="form-control" name="submitHouseDate" data-validate="required" readonly />
                    <span class="add-on"><i class="icon-remove"></i></span>
                    <span class="add-on"><i class="icon-calendar"></i></span>
                </div>
            </td>
            <td>接手日期</td>
            <td>
                <div class="date form_datetime">
                    <input id="submitHouseDate" class="form-control" name="submitHouseDate" data-validate="required" readonly />
                    <span class="add-on"><i class="icon-remove"></i></span>
                    <span class="add-on"><i class="icon-calendar"></i></span>
                </div>
            </td>
        </tr>
        <tr>
            <td>附件</td>
            <td colspan="8"><input type="text" class="form-control input-dark" name="title" id="title" /></td>
        </tr>
        <tr>
            <td>店长/外勤经理</td>
            <td colspan="8"><input type="text" class="form-control input-dark" name="title" id="title" /></td>
        </tr>
        <tr>
            <td>现场经理意见</td>
            <td colspan="8"><input type="text" class="form-control input-dark" name="title" id="title" /></td>
        </tr>
        <tr>
            <td>网络部意见</td>
            <td colspan="8"><input type="text" class="form-control input-dark" name="title" id="title" /></td>
        </tr>
        <tr>
            <td>人事部意见</td>
            <td colspan="8"><input type="text" class="form-control input-dark" name="title" id="title" /></td>
        </tr>
        <tr>
            <td>财务部意见</td>
            <td colspan="8"><input type="text" class="form-control input-dark" name="title" id="title" /></td>
        </tr>
     </table>
</div>

<script src="/Scripts/daterangepicker/daterangepicker.js"></script>
<script src="/Scripts/datepicker/bootstrap-datepicker.js"></script>
<script src="/Scripts/timepicker/bootstrap-timepicker.min.js"></script>
<script src="~/Scripts/datetimepicker/bootstrap-datetimepicker.min.js"></script>
<script type="text/javascript" src="/Scripts/datetimepicker/locales/bootstrap-datetimepicker.zh-CN.js"></script>
<script type="text/javascript">
        $(document).ready(function () {
            $('.form_datetime').datetimepicker({
                format: 'yyyy-mm-dd',
                language: 'zh-CN',
                // weekStart: 1,
                todayBtn: 1,
                autoclose: 1,
                todayHighlight: 1,
                startView: 2,
                minView: 2,
                forceParse: 0
            });
        });

</script>