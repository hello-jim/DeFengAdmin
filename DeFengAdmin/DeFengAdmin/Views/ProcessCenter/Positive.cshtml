
@{
    ViewBag.Title = "Positive";
}
<link rel="stylesheet" href="~/Scripts/datetimepicker/bootstrap-datetimepicker.min.css"> 
<div class="panel">
    <div class="row text-right"><a>送办</a>丨<a>查看流程</a>丨<a>暂存</a>丨<a>打印</a>丨<a href="/ProcessCenter/Regular">返回</a></div>
    <div class="row">&nbsp;</div>
    <div class="row text-center"><h3>转正申请</h3></div>
    <div class="row">&nbsp;</div>
    <table class="table table-bordered staffTable table-small-font">
        <tr>
            <td>姓名</td>
            <td><input type="text" class="form-control input-dark" name="number" id="number" autocomplete="off" /></td>
            <td>岗位</td>
            <td><input type="text" class="form-control input-dark" name="number" id="number" autocomplete="off" /></td>
            <td>所在部门</td>
            <td><input type="text" class="form-control input-dark" name="number" id="number" autocomplete="off" /></td>
            <td>进入公司日期</td>
            <td>
                <div class="date form_datetime">
                    <input id="submitHouseDate" class="form-control" name="submitHouseDate" data-validate="required" readonly />
                    <span class="add-on"><i class="icon-remove"></i></span>
                    <span class="add-on"><i class="icon-calendar"></i></span>
                </div>
            </td>
        </tr>
        <tr>
            <td>试用期薪金</td>
            <td><input type="text" class="form-control input-dark" name="number" id="number" autocomplete="off" /></td>
            <td>转正后薪金</td>
            <td colspan="2"><input type="text" class="form-control input-dark" name="number" id="number" autocomplete="off" /></td>
            <td>转正日期</td>
            <td colspan="2">
                <div class="date form_datetime">
                    <input id="submitHouseDate" class="form-control" name="submitHouseDate" data-validate="required" readonly />
                    <span class="add-on"><i class="icon-remove"></i></span>
                    <span class="add-on"><i class="icon-calendar"></i></span>
                </div>
            </td>
        </tr>
        <tr>
            <td>是否购买社保</td>
            <td>
                <label class="radio-inline distance">
                    <input type="radio" checked="" name="socialSecurity" value="是">
                    是
                </label>
                <label class="radio-inline distance">
                    <input type="radio" checked="" name="socialSecurity" value="否">
                    否
                </label>
            </td>
            <td>购买何处社保</td>
            <td colspan="2">
                <label class="radio-inline">
                    <input type="radio" value="惠州" name="huizhou" checked="">
                    惠州
                </label>
            </td>
            <td>服从调配</td>
            <td colspan="2">
                <label class="radio-inline">
                    <input type="radio" checked="" name="allocate" value="是">
                    是
                </label>
                <label class="radio-inline">
                    <input type="radio" checked="" name="allocate" value="否">
                    否
                </label>
            </td>
        </tr>
        <tr>
            <td>转正理由</td>
            <td colspan="8"><input type="text" class="form-control input-dark" name="number" id="number" autocomplete="off" /></td>
        </tr>
        <tr>
            <td>工作总结</td>
            <td>* 工作总结请以电子文档方式放在附件</td>
            <td colspan="7"><input type="text" class="form-control input-dark" name="number" id="number" autocomplete="off" /></td>
        </tr>
        <tr>
            <td>外勤经理/店长意见 </td>
            <td colspan="8"><input type="text" class="form-control input-dark" name="number" id="number" autocomplete="off" /></td>
        </tr>
        <tr>
            <td>现场经理意见</td>
            <td colspan="8"><input type="text" class="form-control input-dark" name="number" id="number" autocomplete="off" /></td>
        </tr>
        <tr>
            <td>人事部文员意见</td>
            <td colspan="8"><input type="text" class="form-control input-dark" name="number" id="number" autocomplete="off" /></td>
        </tr>
        <tr>
            <td>人事经理</td>
            <td colspan="8"><input type="text" class="form-control input-dark" name="number" id="number" autocomplete="off" /></td>
        </tr>
        <tr>
            <td>副总经理</td>
            <td colspan="8"><input type="text" class="form-control input-dark" name="number" id="number" autocomplete="off" /></td>
        </tr>
        <tr></tr>
    </table>
</div>
<script src="/Scripts/daterangepicker/daterangepicker.js"></script>
<script src="/Scripts/datepicker/bootstrap-datepicker.js"></script>
<script src="/Scripts/timepicker/bootstrap-timepicker.min.js"></script>
<script src="~/Scripts/datetimepicker/bootstrap-datetimepicker.min.js"></script>
<script type="text/javascript" src="/Scripts/datetimepicker/locales/bootstrap-datetimepicker.zh-CN.js"></script>
<script type="text/javascript">
        $(document).ready(function () {
            $('.form_datetime').datetimepicker({
                format: 'yyyy-mm-dd',
                language: 'zh-CN',
                // weekStart: 1,
                todayBtn: 1,
                autoclose: 1,
                todayHighlight: 1,
                startView: 2,
                minView: 2,
                forceParse: 0
            });
        });

</script>